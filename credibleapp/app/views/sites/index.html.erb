  
  <div class="intro">
    <div class="call container-fluid">
      <h2>Can we afford that house?</h2>
      <p>Sign up and be able to save your results or find out right now...</p>
      <span class="action-btns container-fluid"><a class="btn btn-primary" href="#">Sign Up</a> <a class="btn btn-default" href="#">Find out</a></span>
    </div>
  </div>

  <div class="signin">
    <h2>Sign In</h2>
   <%= form_tag("/users/signin", method: "post") do %>
      <%= label_tag(:email, "Email:") %> <br>
      <%= text_field_tag(:email) %> <br>
      <%= label_tag(:password, "Password:") %> <br>
      <%= text_field_tag(:password) %> <br>
      <%= submit_tag("Sign In", class: "btn btn-primary") %>
    <% end %>
  </div>

  <div class="signup">
    <h2>Sign Up</h2>
   <%= form_tag("/users/signup", method: "post") do %>
      <p><%= label_tag(:first_name, "First Name:") %> <%= text_field_tag(:first_name) %> </p>
      <p><%= label_tag(:last_name, "Last Name:") %> <%= text_field_tag(:last_name) %> </p>
      <p><%= label_tag(:email, "Email:") %>
      <%= text_field_tag(:email) %> </p>
      <p><%= label_tag(:password, "Password:") %>
      <%= text_field_tag(:password) %> </p>
      <p><%= label_tag(:annual_income, "Annual Income:") %> <%= text_field_tag(:annual_income) %> </p>
      <p><%= label_tag(:budgeted_monthly_pmt, "Expected Monthly Mortgage Payment:") %> <%= text_field_tag(:budgeted_monthly_pmt) %> </p>
      <p><%= label_tag(:down_pmt, "Expected Down Payment:") %> <%= text_field_tag(:down_pmt) %> </p>
      <p><%= label_tag(:monthly_debt, "Monthly Debt:") %> <%= text_field_tag(:monthly_debt) %> </p>

      <%= submit_tag("Sign Up", class: "btn btn-primary") %>
    <% end %>
  </div>

  <div class="searches">
    <h1>Previous Searches</h1>
    <p>The list below are of previous searches made</p>
  </div>

  <div class="new-search">
    <h1>Search Form</h1>
    <%= form_tag("/search", method: "post") do %>
      <p><%= label_tag(:annualincome, "Annual Income:") %>
      <%= number_field_tag(:annualincome) %></p>
      <p><%= label_tag(:monthlypayment, "Desired Monthly:") %>
      <%= number_field_tag(:monthlypayment) %></p>
      <p><%= label_tag(:down, "Expected Down Payment:") %>
      <%= number_field_tag(:down) %></p>
      <p><%= label_tag(:monthlydebts, "Current Monthly Debt:") %>
      <%= number_field_tag(:monthlydebts) %></p>
      <div class="adv-options">
        <p><%= label_tag(:rate, "Expected Interest Rate (%):") %><%= number_field_tag(:rate) %></p>
        <p>You may select an amortization schedule below: <br>
        <%= radio_button_tag(:schedule, "none", :checked) %> <%= label_tag(:schedule, "None") %> <%= radio_button_tag(:schedule, "yearly") %> <%= label_tag(:schedule, "Yearly") %> <%= radio_button_tag(:schedule, "monthly") %> <%= label_tag(:schedule, "Monthly") %> <%= radio_button_tag(:schedule, "both") %> <%= label_tag(:schedule, "Both") %></p>
        <p><%= label_tag(:term, "Desired Mortgage Term (in years):") %>
      <%= number_field_tag(:term, "30") %></p>
      <p><%= label_tag(:debttoincome, "Debt-to-income Ratio Limit (%):") %>
      <%= number_field_tag(:debttoincome, "36") %></p>
      <p><%= label_tag(:incometax, "Estimated Income Tax rate (%):") %>
      <%= number_field_tag(:incometax, 30) %></p>
      <p><%= check_box_tag(:estimate) %> <%= label_tag(:estimate, "Estimate (PMI, hazard insurance and property tax, and returns them)?") %></p>
      <p>Zipcode must be provided to correctly estimate premiums and taxes <br>
      <%= label_tag(:zip, "Zip Code of Property:") %>
      <%= text_field_tag(:zip) %></p>
      <p><%= label_tag(:hazard, "Expected Hazard Insurance Premium:") %>
      <%= number_field_tag(:hazard) %></p>
      <p><%= label_tag(:pmi, "Expected PMI Premium:") %>
      <%= number_field_tag(:pmi) %></p>
      <p><%= label_tag(:propertytax, "Expected Property Tax:") %>
      <%= number_field_tag(:propertytax) %></p>
      <p><%= label_tag(:hoa, "Expected Monthly HOA Fees:") %>
      <%= number_field_tag(:hoa, "0") %></p>
      </div>

      <%= submit_tag("Estimate", class: "btn btn-primary") %>
    <% end %>

  </div>

  <div class="user-details">
    <div class="edit-user"></div>
    <div class="detail"></div>
  </div>
